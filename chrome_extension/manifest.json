{
  "manifest_version": 3,
  "name": "Cyberbullying Prevention Plugin",
  "version": "1.0",
  "description": "A Chrome extension to detect cyberbullying in real-time on Twitter/X.",
  "permissions": ["activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}